{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "separate-pull-requests": false,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "packages": {
    "apps/api": {
      "component": "api",
      "release-type": "python",
      "package-name": "api"
    },
    "apps/web-ui": {
      "component": "web-ui",
      "release-type": "node",
      "package-name": "web-ui"
    },
    "apps/opamp-server": {
      "component": "opamp-server",
      "release-type": "simple",
      "package-name": "opamp-server"
    },
    "apps/demo": {
      "component": "demo",
      "release-type": "python",
      "package-name": "demo"
    },
    "apps/demo-otel-agent": {
      "component": "demo-otel-agent",
      "release-type": "python",
      "package-name": "demo-otel-agent"
    },
    "charts/ollyscale": {
      "component": "chart-ollyscale",
      "release-type": "helm",
      "package-name": "chart-ollyscale",
      "extra-files": [
        {
          "type": "yaml",
          "path": "values.yaml",
          "jsonpath": "$.api.image.tag",
          "component": "api",
          "bumpDependents": true
        },
        {
          "type": "yaml",
          "path": "values.yaml",
          "jsonpath": "$.otlpReceiver.image.tag",
          "component": "api",
          "bumpDependents": true
        },
        {
          "type": "yaml",
          "path": "values.yaml",
          "jsonpath": "$.webui.image.tag",
          "component": "web-ui",
          "bumpDependents": true
        },
        {
          "type": "yaml",
          "path": "values.yaml",
          "jsonpath": "$.opampServer.image.tag",
          "component": "opamp-server",
          "bumpDependents": true
        }
      ]
    },
    "charts/ollyscale-demos": {
      "component": "chart-ollyscale-demos",
      "release-type": "helm",
      "package-name": "chart-ollyscale-demos"
    },
    "charts/ollyscale-otel-agent": {
      "component": "chart-ollyscale-otel-agent",
      "release-type": "helm",
      "package-name": "chart-ollyscale-otel-agent"
    }
  },
  "plugins": []
}
